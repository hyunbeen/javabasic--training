				dao.setCustTel1(r1.getString("tel_id"));
				dao.setCustTel2(r1.getString("s_tel"));
				// 6. 닫기 (PreparedStatement  만 닫기)
				searchnum = r1.getString("tel_id");
				ps.close();
				
		return dao;
		
	}
	
