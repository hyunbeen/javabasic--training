package project;
import javax.swing.*;
import java.awt.*;
public class Calculator extends Frame {
	
	JFrame f;
	JButton nb[] = new JButton[10];
	JButton bAdd;
	JButton bSub;
	JButton bMul;
	JButton bDiv;
	JButton bEqual;
	JTextField tf;
	
	public Calculator() {
		JFrame f = new JFrame("계산기");
		nb[0] = new JButton("0");
		nb[1] = new JButton("1");
		nb[2] = new JButton("2");
		nb[3] = new JButton("3");
		nb[4] = new JButton("4");
		nb[5] = new JButton("5");
		nb[6] = new JButton("6");
		nb[7] = new JButton("7");
		nb[8] = new JButton("8");
		nb[9] = new JButton("9");
		bAdd = new JButton("+");
		bSub = new JButton("-");
		bMul = new JButton("*");
		bDiv = new JButton("/");
		bEqual = new JButton("=");
		tf = new JTextField("식을 입력하시오");
	}
	public void setUI() {
		setLayout(new BorderLayout());
		add(tf,BorderLayout.NORTH);
		Panel p = new Panel();
		p.setLayout(new GridLayout(5,3));
		nb[1].setBackground(new Color(255,128,0));
		p.add(nb[1]);
		nb[2].setBackground(new Color(255,128,0));
		p.add(nb[2]);
		nb[3].setBackground(new Color(255,128,0));
		p.add(nb[3]);
		nb[4].setBackground(new Color(255,128,0));
		p.add(nb[4]);
		nb[5].setBackground(new Color(255,128,0));
		p.add(nb[5]);
		nb[6].setBackground(new Color(255,128,0));
		p.add(nb[6]);
		nb[7].setBackground(new Color(255,128,0));
		p.add(nb[7]);
		nb[8].setBackground(new Color(255,128,0));
		p.add(nb[8]);
		nb[9].setBackground(new Color(255,128,0));
		p.add(nb[9]);
		nb[0].setBackground(new Color(255,128,0));
		p.add(bAdd);
		p.add(nb[0]);
		p.add(bSub);
		p.add(bMul);
		p.add(bDiv);
		p.add(bEqual);
		
		add(p,BorderLayout.CENTER);
		setSize(300,400);
		setVisible(true);
		
	}
	
	public static void main(String[] args) {
		Calculator cal = new Calculator();
		cal.setUI();
		

	}

}
